{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2016",
    "lib": ["ESNext", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}