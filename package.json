{
  "name": "react-tailwind-variants",
  "version": "0.0.1",
  "description": "React Stitches-like variants API for tailwindcss classes",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsup src/index.ts --format cjs,esm --dts",
