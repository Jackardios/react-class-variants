    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "jsdom": "^21.1.1",
    "react-dom": "^18.2.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.1"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0",
    "tailwind-merge": "^1.10.0"
  }
